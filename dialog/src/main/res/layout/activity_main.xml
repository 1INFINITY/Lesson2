<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShowDialogFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="244dp"
        android:text="DialogFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShowTimeDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TimeDialog"
        app:layout_constraintEnd_toEndOf="@+id/btnShowDialogFragment"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/btnShowDialogFragment"
        app:layout_constraintTop_toBottomOf="@+id/btnShowDialogFragment" />

    <Button
        android:id="@+id/btnShowDateDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="DateDialog"
        app:layout_constraintEnd_toEndOf="@+id/btnShowDialogFragment"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/btnShowDialogFragment"
        app:layout_constraintTop_toBottomOf="@+id/btnShowTimeDialog" />

    <Button
        android:id="@+id/btnShowProgressDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="ProgressDialog"
        app:layout_constraintEnd_toEndOf="@+id/btnShowDialogFragment"
        app:layout_constraintStart_toStartOf="@+id/btnShowDialogFragment"
        app:layout_constraintTop_toBottomOf="@+id/btnShowDateDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>