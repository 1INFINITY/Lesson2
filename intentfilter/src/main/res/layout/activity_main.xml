<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnOpenWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="Открыть сайт"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpenApp"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Отправить данные в другое приложение"
        app:layout_constraintEnd_toEndOf="@+id/btnOpenWeb"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/btnOpenWeb"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenWeb" />

</androidx.constraintlayout.widget.ConstraintLayout>